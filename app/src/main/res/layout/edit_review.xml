<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/review_edit_cancel_button2"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/common_cancelButton"
        app:layout_constraintEnd_toEndOf="@+id/writtenReview"
        app:layout_constraintStart_toStartOf="@+id/writtenReview"
        app:layout_constraintTop_toBottomOf="@+id/saveAndPublishEditReview" />

    <EditText
        android:id="@+id/writtenReview"
        android:layout_width="350dp"
        android:layout_height="225dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|bottom"
        android:hint="@string/editReviewView_HintText"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/foodInfoWindow"
        app:layout_constraintStart_toStartOf="@+id/foodInfoWindow"
        app:layout_constraintTop_toBottomOf="@+id/textureRatingBar" />

    <RatingBar
        android:id="@+id/tasteRatingBar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodInfoWindow" />

    <RatingBar
        android:id="@+id/appearanceRatingBar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasteRatingBar" />

    <RatingBar
        android:id="@+id/textureRatingBar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appearanceRatingBar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editReviewView_texture"
        app:layout_constraintBottom_toBottomOf="@+id/textureRatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textureRatingBar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editReviewView_appearance"
        app:layout_constraintBottom_toBottomOf="@+id/appearanceRatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appearanceRatingBar" />

    <TextView
        android:id="@+id/foodInfoWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Lihapullat ja perunamuusi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editReviewView_taste"
        app:layout_constraintBottom_toBottomOf="@+id/tasteRatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasteRatingBar" />

    <Button
        android:id="@+id/removeButtonEditReview"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/editReviewView_deleteReviewButton"
        app:layout_constraintEnd_toEndOf="@+id/writtenReview"
        app:layout_constraintStart_toStartOf="@+id/writtenReview"
        app:layout_constraintTop_toBottomOf="@+id/writtenReview" />

    <Button
        android:id="@+id/saveAndPublishEditReview"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/editReviewView_publishReviewButton"
        app:layout_constraintEnd_toEndOf="@+id/writtenReview"
        app:layout_constraintStart_toStartOf="@+id/writtenReview"
        app:layout_constraintTop_toBottomOf="@+id/saveButtonEditReview" />

    <Button
        android:id="@+id/saveButtonEditReview"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/editReviewView_saveReviewButton"
        app:layout_constraintEnd_toEndOf="@+id/writtenReview"
        app:layout_constraintStart_toStartOf="@+id/writtenReview"
        app:layout_constraintTop_toBottomOf="@+id/removeButtonEditReview" />

</androidx.constraintlayout.widget.ConstraintLayout>