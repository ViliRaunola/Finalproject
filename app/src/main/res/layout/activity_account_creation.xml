<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountCreationActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:text="@string/common_passwordRequirements"
        app:layout_constraintEnd_toEndOf="@+id/homeUniversity_spinner_account_creation"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/homeUniversity_spinner_account_creation"
        app:layout_constraintTop_toBottomOf="@+id/homeUniversity_spinner_account_creation" />

    <Button
        android:id="@+id/confirmButton_account_creation"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:onClick="confirmPressed"
        android:text="@string/accountCreation_makeAccountButton"
        app:layout_constraintBottom_toBottomOf="@+id/cancelButton_account_creation"
        app:layout_constraintEnd_toEndOf="@+id/confirmPasswordTextField_account_creation"
        app:layout_constraintTop_toTopOf="@+id/cancelButton_account_creation"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/emailTextField_account_creation"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/confirmPasswordTextField_account_creation"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/passwordTextField_account_creation"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/passwordTextField_account_creation"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextField_account_creation" />

    <EditText
        android:id="@+id/lastNameTextField_account_creation"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/firstNameTextField_account_creation"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="@+id/firstNameTextField_account_creation"
        app:layout_constraintTop_toBottomOf="@+id/firstNameTextField_account_creation" />

    <EditText
        android:id="@+id/firstNameTextField_account_creation"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/emailTextField_account_creation"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/emailTextField_account_creation"
        app:layout_constraintTop_toBottomOf="@+id/emailTextField_account_creation" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Common_eMail"
        app:layout_constraintBottom_toTopOf="@+id/emailTextField_account_creation"
        app:layout_constraintStart_toStartOf="@+id/emailTextField_account_creation"
        app:layout_constraintTop_toTopOf="@+id/emailTextField_account_creation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_firstName"
        app:layout_constraintBottom_toTopOf="@+id/firstNameTextField_account_creation"
        app:layout_constraintStart_toStartOf="@+id/firstNameTextField_account_creation"
        app:layout_constraintTop_toTopOf="@+id/firstNameTextField_account_creation" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="78dp"
        android:layout_height="21dp"
        android:text="@string/common_lastName"
        app:layout_constraintBottom_toTopOf="@+id/lastNameTextField_account_creation"
        app:layout_constraintStart_toStartOf="@+id/lastNameTextField_account_creation"
        app:layout_constraintTop_toTopOf="@+id/lastNameTextField_account_creation" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_confirmPassword"
        app:layout_constraintBottom_toTopOf="@+id/confirmPasswordTextField_account_creation"
        app:layout_constraintStart_toStartOf="@+id/confirmPasswordTextField_account_creation"
        app:layout_constraintTop_toTopOf="@+id/confirmPasswordTextField_account_creation" />

    <Spinner
        android:id="@+id/homeUniversity_spinner_account_creation"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="@+id/lastNameTextField_account_creation"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="@+id/lastNameTextField_account_creation"
        app:layout_constraintTop_toBottomOf="@+id/lastNameTextField_account_creation" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_homeUniversity"
        app:layout_constraintBottom_toTopOf="@+id/homeUniversity_spinner_account_creation"
        app:layout_constraintStart_toStartOf="@+id/homeUniversity_spinner_account_creation"
        app:layout_constraintTop_toTopOf="@+id/homeUniversity_spinner_account_creation" />

    <Button
        android:id="@+id/cancelButton_account_creation"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:text="@string/common_cancelButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/confirmPasswordTextField_account_creation"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTextField_account_creation"
        app:layout_constraintVertical_bias="0.634" />

    <EditText
        android:id="@+id/passwordTextField_account_creation"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_password"
        app:layout_constraintBottom_toTopOf="@+id/passwordTextField_account_creation"
        app:layout_constraintStart_toStartOf="@+id/passwordTextField_account_creation"
        app:layout_constraintTop_toTopOf="@+id/passwordTextField_account_creation" />

</androidx.constraintlayout.widget.ConstraintLayout>
